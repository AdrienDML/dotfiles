### Apperance
include ~/.config/sway/config.d/vars
# Gaps settings
smart_gaps on
gaps inner 1
gaps outer 0

# Border settings
smart_borders on
default_border pixel 2

# Cursor Theme & size
seat seat0 xcursor_theme LyraB-cursors 30



# border - border around titlebar
# bg - titlebar background
# text - text on titlebar
# indicator - shown where new window will open
# child_border - border around the window
# class			        border		bg		    text	           indicator	child_border
client.focused		    $cyan	    $blue	    $background   	   $cyan	    $cyan
client.focused_inactive $cyan	    $blue	    $background   	   $cyan    	$cyan
client.unfocused	    $cyan	    $blue	    $background   	   $cyan	    $background
client.urgent		    $cyan	    $blue	    $background        $cyan	    $magenta
